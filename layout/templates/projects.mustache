<h1>Recent projects</h1>
<ul class="projects-list">

  {{#projects}}
  <li class="{{categories}}">
    <h3>{{name}}</h3>
    {{#has_thumbnail?}}
    <div class="thumbnail">
      <!-- <img src="http://placehold.it/150x85" /> -->
      <img src="/projects/{{thumbnail}}" />
    </div>
    {{/has_thumbnail?}}
    <p class="tech">
      {{#tech}}
        {{^last?}}<span>{{item}}</span>, {{/last?}}
        {{#last?}}<span>{{item}}</span>{{/last?}}
      {{/tech}}
    </p>
    <div class="summary">
      {{{summary}}}
    </div>
    {{#link}}
    <a href="{{url}}">{{name}}</a>
    {{/link}}
  </li>
  {{/projects}}

</ul>