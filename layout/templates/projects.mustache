<h1>Recent projects</h1>
<ul class="projects-list">

  {{#projects}}
  <li class="{{^has_thumbnail?}}no-thumbnail{{/has_thumbnail?}} {{categories}}">
    <h3>{{name}}</h3>
    {{#has_thumbnail?}}
    <div class="thumbnail">
      <!-- <img src="http://placehold.it/150x85" /> -->
      <img src="/projects/{{thumbnail}}" alt=""/>
    </div>
    {{/has_thumbnail?}}
    <p class="tech">
      {{#tech}}
        {{^last?}}<span>{{item}}</span>, {{/last?}}
        {{#last?}}<span>{{item}}</span>{{/last?}}
      {{/tech}}
    </p>
    <div class="summary">
      {{{summary}}}
    </div>
    <div class="links">
      {{#link}}
      <a href="{{url}}">{{name}}</a>
      {{/link}}
    </div>
  </li>
  {{/projects}}

</ul>